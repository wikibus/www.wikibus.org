{
  "root": true,
  "extends": [
    "@open-wc/eslint-config",
    "eslint-config-prettier",
    "@tpluscode"
  ],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "lit"
  ],
  "globals": {
    "SEMICOLON": "readonly"
  },
  "rules": {
    "array-callback-return": "off",
    "import/no-cycle": "warn",
    "wc/guard-super-call": "off"
  }
}
