{
  "name": "www.wikibus.org",
  "version": "0.1.0",
  "description": "wikibus.org public transport encyclopedia",
  "keywords": [
    "bus",
    "tram",
    "trolleybus"
  ],
  "author": "Tomasz Pluskiewicz",
  "license": "ISC",
  "scripts": {
    "lint:eslint": "eslint --ext .js,.html,.ts . --ignore-path .gitignore --quiet --ignore-pattern '/src/vendor/js/*' --ignore-pattern '/src/functions.js'",
    "format:eslint": "eslint --ext .js,.html,.ts . --fix --ignore-path .gitignore --quiet --ignore-pattern '/src/vendor/js/*' --ignore-pattern '/src/functions.js'",
    "lint:prettier": "prettier \"**/*.{ts,js}\" --check",
    "format:prettier": "prettier \"**/*.{ts,js}\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:compatibility": "karma start --compatibility all --coverage",
    "test:compatibility:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "test:bs": "karma start karma.bs.config.js --compatibility all --coverage",
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "release": "standard-version"
  },
  "dependencies": {
    "@hydrofoil/alcaeus-loader": "^0.3.2",
    "@hydrofoil/hydrofoil-shell": "^0.2.4",
    "@lit-any/forms": "^0.10.1",
    "@lit-any/views": "^0.9.4",
    "@zazuko/rdf-vocabularies": "^2019.9.24",
    "alcaeus": "^0.9.1",
    "feather-icon-literals": "^1.0.0-rc.7",
    "flyd": "^0.2.8",
    "iso-language-codes": "^1.0.5",
    "ld-navigation": "^1.0.0",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2",
    "meiosis-setup": "^2.0.0",
    "patchinko": "^4.2.0",
    "simple-icons": "^1.19.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@open-wc/building-webpack": "^2.1.0",
    "@open-wc/eslint-config": "^1.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^0.11.1",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "@types/jquery": "^3.3.31",
    "@types/mergerino": "^0.4.0",
    "copy-webpack-plugin": "^5.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "raw-loader": "^3.1.0",
    "standard": "^13.1.0",
    "standard-version": "^7.0.0",
    "typescript": "^3.5.3",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.3.4",
    "webpack-merge": "^4.1.5",
    "webpack-dev-server": "^3.8.0",
    "eslint-plugin-lit": "^1.2.0",
    "sass-loader": "^7.3.1",
    "node-sass": "^4.12.0",
    "style-loader": "^1.0.0",
    "css-loader": "^3.2.0",
    "dotenv-webpack": "^1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --quiet",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
